#!/usr/bin/env groovy

node('maven') {
    stage ('Build & Deploy - DV') {
        checkout([$class: 'GitSCM', branches: [[name: 'master']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[credentialsId: 'digipolisgent-ci', url: 'git@github.com:StadGent/nuxt_site_verwerkingsregister.git']]])

        openshiftProcessTemplates namespace: "d09build", fileName: "openshift/build-dv.yml", cluster: "openshiftqa"

        openshiftStartBuild namespace:"d09build", bldCfg: "verwerkingsregister-dv", cluster: "openshiftqa"

        openshiftProcessTemplates namespace: "webcomponentsdv", fileName: "openshift/openshift-dv.yml", cluster: "openshiftqa"

        openshiftVerifyDeployment namespace : "webcomponentsdv", depCfg: "verwerkingsregister", cluster: "openshiftqa"
    }
}
